modules = ["python-3.12"]

[run]
command = "streamlit run app.py --server.port=5000 --server.address=0.0.0.0"


[nix]
channel = "stable-24_05"
packages = [
  "glibcLocales",
  "gcc",
  "glibc",
  "libstdcxx5",
  "zlib",
  "openssl",
  "pkg-config",
  "python312Full",
  "python312Packages.pip"
]

[deployment]
run = ["sh", "-c", "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PYTHONUNBUFFERED = "1"
PYTHONPATH = "/home/runner/${REPL_SLUG}"
