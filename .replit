modules = ["python-3.11"]

[run]
command = "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true --server.enableCORS=false"

[nix]
channel = "stable-24_05"
packages = [
  "glibcLocales",
  "gcc",
  "glibc",
  "libstdcxx5",
  "zlib",
  "openssl",
  "pkg-config",
  "python312Full",
  "python312Packages.pip"
]

[deployment]
run = ["sh", "-c", "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PYTHONUNBUFFERED = "1"
PYTHONPATH = "/home/runner/${REPL_SLUG}"
PIP_DISABLE_PIP_VERSION_CHECK = "1"

[workflows]
runButton = "Clean Start"

[[workflows.workflow]]
name = "Clean Start"
author = 43683701
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export PYTHONPATH=\"$PWD\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f streamlit || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"import distutils; print('✅ distutils available')\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pip install --user --no-cache-dir --upgrade pip setuptools wheel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pip install --user --no-cache-dir -r core-requirements.txt"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"import streamlit, pandas, numpy, plotly; print('✅ All core packages verified')\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true --server.enableCORS=false"
