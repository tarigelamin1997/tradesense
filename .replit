modules = ["python-3.11"]

[run]
command = "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true --server.enableCORS=false"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PYTHONUNBUFFERED = "1"
PYTHONPATH = "/home/runner/${REPL_SLUG}"
PIP_DISABLE_PIP_VERSION_CHECK = "1"

[workflows]
runButton = "Start TradeSense"

[[workflows.workflow]]
name = "Quick Start"
author = 43683701
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export PYTHONPATH=\"$PWD\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export PATH=\"$HOME/.local/bin:$PATH\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f streamlit || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 1"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -c \"import sys; print(f'âœ… Python {sys.version_info.major}.{sys.version_info.minor} ready')\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m pip install --user --no-cache-dir --upgrade pip setuptools wheel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m pip install --user --no-cache-dir -r core-requirements.txt"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -c \"import streamlit, pandas, numpy, plotly; print('âœ… All packages verified')\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true --server.enableCORS=false"

