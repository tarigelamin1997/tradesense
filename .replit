modules = ["python-3.11"]

[run]
command = "python3 -m streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "python3 -m streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PYTHONUNBUFFERED = "1"
PYTHONPATH = "/home/runner/${REPL_SLUG}"
PIP_DISABLE_PIP_VERSION_CHECK = "1"