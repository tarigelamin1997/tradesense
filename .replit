modules = ["python-3.11"]

[run]
command = "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true --server.enableCORS=false"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PYTHONUNBUFFERED = "1"
PYTHONPATH = "/home/runner/${REPL_SLUG}"
PIP_DISABLE_PIP_VERSION_CHECK = "1"

[workflows]
runButton = "TradeSense App"

[[workflows.workflow]]
name = "TradeSense App"
author = 43683701
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"ðŸš€ Starting TradeSense...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 --version"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m pip install --user -q -r requirements.txt"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true"
