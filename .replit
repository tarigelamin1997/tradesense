modules = ["python-3.11"]

[run]
command = "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true --server.enableCORS=false"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PYTHONUNBUFFERED = "1"
PYTHONPATH = "/home/runner/${REPL_SLUG}"
PIP_DISABLE_PIP_VERSION_CHECK = "1"

[workflows]
runButton = "Clean Start"

[[workflows.workflow]]
name = "Clean Start"
author = 43683701
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"ðŸ§¹ Cleaning environment...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf ~/.local/lib/python*"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf ~/.cache/pip"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"ðŸ”§ Testing Python...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 --version"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"ðŸ“¦ Installing dependencies...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m pip install --user --no-cache-dir streamlit==1.29.0"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m pip install --user --no-cache-dir pandas==2.0.3 numpy==1.24.4"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m pip install --user --no-cache-dir plotly==5.17.0"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"ðŸš€ Starting TradeSense...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true"
